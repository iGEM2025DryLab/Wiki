---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: "Home", path: "/" },
  { name: "Team", path: "/team/" },
  { name: "Project", path: "/project/" },
  { name: "Wet Lab", path: "/wetlab/" },
  { name: "Dry Lab", path: "/drylab/" },
  { name: "Human Practices", path: "/human-practices/" },
  { name: "Results", path: "/results/" },
  { name: "Notebook", path: "/notebook/" },
];
---

<nav class="nav">
  <div class="container">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3">
        <div class="w-8 h-8 bg-lychee-500 rounded-full flex items-center justify-center text-white font-bold">
          LG
        </div>
        <span class="font-display font-bold text-xl text-lychee-500">Lychee Guardians</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-1">
        {navItems.map((item) => (
          <a 
            href={item.path}
            class="nav-link px-4 py-3 text-sm font-semibold text-ink-700 hover:text-lychee-500 transition-colors rounded-lg hover:bg-lychee-50"
            aria-current={currentPath === item.path ? "page" : undefined}
          >
            {item.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden p-2 rounded-lg hover:bg-gray-100" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="pt-4 pb-2 space-y-1">
        {navItems.map((item) => (
          <a 
            href={item.path}
            class="block px-4 py-2 text-base font-medium text-ink-700 hover:text-lychee-500 hover:bg-lychee-50 rounded-lg"
            aria-current={currentPath === item.path ? "page" : undefined}
          >
            {item.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-link[aria-current="page"] {
    @apply text-lychee-500 bg-lychee-50;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>