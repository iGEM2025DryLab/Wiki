---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import PageTypeDemo from '../components/PageTypeDemo.astro';
import '../styles/global.css';
---

<Layout title="Lychee Guardians - iGEM 2025">
	<Navigation />
	<Hero />
	
	<!-- Spacer to create scroll space for animation -->
	<div class="scroll-spacer" style="height: 90vh;"></div>
	
	<!-- Additional content that appears after scroll animation -->
	<div id="main-content" class="min-h-screen bg-gray-50 p-8">
		<div class="container mx-auto text-center">
			<h2 class="text-3xl font-bold mb-4">Continue Your Journey</h2>
			<p class="text-lg text-gray-700">More content will be added here...</p>
		</div>
	</div>
	
	<!-- Demo Component (only visible in development) -->
	<PageTypeDemo />
</Layout>

