<!-- Pac-Man Navigation Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Dry Lab Pac-Man Navigation Script Starting...');
    
    const pacmanNav = document.getElementById('pacman-nav');
    const rightNavContainer = document.getElementById('right-nav-container');
    const pacmanContainer = document.getElementById('pacman-container');
    const rightNavContent = document.getElementById('right-nav-content');
    const rightNavCollapsed = document.getElementById('right-nav-collapsed');
    const rightNavExpanded = document.getElementById('right-nav-expanded');
    
    if (!pacmanNav || !pacmanContainer) {
      console.error('Pac-man navigation containers not found!');
      return;
    }

    // Show navigation immediately for debugging
    pacmanNav.style.opacity = '1';
    pacmanNav.classList.add('visible');
    
    if (rightNavContainer) {
      rightNavContainer.style.opacity = '1';
      rightNavContainer.classList.add('visible');
    }
    
    // Define sections for pac-man navigation (simplified)
    const sections = [
      { id: 'hero', name: 'Introduction', color: '#00a3ff' },
      { id: 'overview', name: 'Overview', color: '#ffd700' },
      { id: 'litchidb', name: 'LitchiDB', color: '#7928ca' },
      { id: 'bactagenome', name: 'BactaGenome', color: '#4CAF50' },
      { id: 'drone', name: 'Drone System', color: '#FF9800' },
      { id: 'synbiomcp', name: 'SynbioMCP', color: '#E91E63' },
      { id: 'team', name: 'Team', color: '#9C27B0' }
    ];
    
    console.log('Pac-man sections:', sections);
    
    // Create Pac-Man Navigation
    function createPacmanNavigation() {
      pacmanContainer.innerHTML = '';
      
      // Create track background
      const track = document.createElement('div');
      track.className = 'pacman-track';
      track.style.height = '350px';
      
      // Create Pac-Man character
      const pacman = document.createElement('div');
      pacman.className = 'pacman';
      pacman.style.top = '0%';
      
      const pacmanBody = document.createElement('div');
      pacmanBody.className = 'pacman-body';
      pacman.appendChild(pacmanBody);
      
      // Create dots for each section
      sections.forEach((section, index) => {
        const sectionElement = document.getElementById(section.id);
        if (!sectionElement) {
          console.warn(`Section ${section.id} not found`);
          return;
        }
        
        console.log(`Creating pac-man nav for: ${section.id}`);
        
        const dotContainer = document.createElement('div');
        dotContainer.style.position = 'absolute';
        dotContainer.style.top = `${(index / (sections.length - 1)) * 100}%`;
        dotContainer.style.left = '50%';
        dotContainer.style.transform = 'translate(-50%, -50%)';
        dotContainer.style.cursor = 'pointer';
        dotContainer.style.padding = '12px';
        
        const dot = document.createElement('div');
        dot.className = 'pacman-dot';
        
        const tooltip = document.createElement('div');
        tooltip.className = 'pacman-label';
        tooltip.textContent = section.name;
        
        // Hover effects
        dotContainer.addEventListener('mouseenter', () => {
          dot.classList.add('hover-state');
          dot.style.setProperty('--hover-color', section.color);
        });
        
        dotContainer.addEventListener('mouseleave', () => {
          dot.classList.remove('hover-state');
        });
        
        // Click to scroll
        dotContainer.addEventListener('click', () => {
          console.log(`Scrolling to: ${section.id}`);
          sectionElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
        
        dotContainer.appendChild(dot);
        dotContainer.appendChild(tooltip);
        track.appendChild(dotContainer);
      });
      
      pacmanContainer.appendChild(track);
      pacmanContainer.appendChild(pacman);
      
      // Store pacman reference for updates
      window.pacmanCharacter = pacman;
    }
    
    // Create Right Side Module Navigation
    function createRightNavigation() {
      if (!rightNavContent || !rightNavCollapsed) return;
      
      // Clear existing content
      rightNavContent.innerHTML = '';
      const collapsedContainer = rightNavCollapsed.querySelector('.flex');
      if (collapsedContainer) collapsedContainer.innerHTML = '';
      
      const moduleItems = [
        { section: 'hero', name: 'Introduction', icon: '🏠' },
        { section: 'overview', name: 'Overview', icon: '📋' },
        { section: 'litchidb', name: 'LitchiDB', icon: '🗄️' },
        { section: 'bactagenome', name: 'BactaGenome', icon: '🧬' },
        { section: 'drone', name: 'Drone System', icon: '🚁' },
        { section: 'synbiomcp', name: 'SynbioMCP', icon: '⚗️' },
        { section: 'team', name: 'Team', icon: '👥' }
      ];
      
      moduleItems.forEach((item, index) => {
        // Create collapsed dot
        const dot = document.createElement('div');
        dot.className = 'right-nav-dot';
        dot.dataset.section = item.section;
        dot.addEventListener('click', () => {
          const sectionElement = document.getElementById(item.section);
          if (sectionElement) {
            console.log(`Scrolling to: ${item.section}`);
            sectionElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
        collapsedContainer.appendChild(dot);
        
        // Create expanded item
        const moduleDiv = document.createElement('div');
        moduleDiv.className = 'right-nav-item';
        moduleDiv.style.cssText = `
          display: flex;
          align-items: center;
          gap: 8px;
          padding: 8px 12px;
          margin: 4px 0;
          background: rgba(255, 255, 255, 0.1);
          color: white;
          border-radius: 8px;
          font-size: 13px;
          cursor: pointer;
          transition: all 0.3s ease;
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.2);
        `;
        
        moduleDiv.innerHTML = `
          <span class="module-icon">${item.icon}</span>
          <span class="module-name">${item.name}</span>
        `;
        
        // Hover effects
        moduleDiv.addEventListener('mouseenter', () => {
          moduleDiv.style.background = 'rgba(0, 163, 255, 0.3)';
          moduleDiv.style.transform = 'translateX(-4px)';
          moduleDiv.style.borderColor = 'rgba(0, 163, 255, 0.5)';
        });
        
        moduleDiv.addEventListener('mouseleave', () => {
          moduleDiv.style.background = 'rgba(255, 255, 255, 0.1)';
          moduleDiv.style.transform = 'translateX(0)';
          moduleDiv.style.borderColor = 'rgba(255, 255, 255, 0.2)';
        });
        
        // Click to scroll
        moduleDiv.addEventListener('click', () => {
          const sectionElement = document.getElementById(item.section);
          if (sectionElement) {
            console.log(`Scrolling to: ${item.section}`);
            sectionElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
        
        // Store reference for active state updates
        moduleDiv.dataset.section = item.section;
        
        rightNavContent.appendChild(moduleDiv);
      });
    }
    
    // Update navigation based on scroll
    function updateNavigation() {
      const scrollY = window.pageYOffset + 100;
      let activeIndex = 0;
      
      sections.forEach((section, index) => {
        const element = document.getElementById(section.id);
        if (element && element.offsetTop <= scrollY) {
          activeIndex = index;
        }
      });
      
      // Move Pac-Man
      if (window.pacmanCharacter) {
        const newPosition = (activeIndex / (sections.length - 1)) * 100;
        window.pacmanCharacter.style.top = `${newPosition}%`;
      }
      
      // Update dots (eat them up to current position with animation)
      const dotContainers = pacmanContainer.querySelectorAll('.pacman-track > div');
      dotContainers.forEach((container, index) => {
        const dot = container.querySelector('.pacman-dot');
        if (dot && index <= activeIndex) {
          if (!dot.classList.contains('eaten')) {
            // Animate the eating process
            dot.style.animation = 'eaten-transition 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards';
            dot.classList.add('eaten');
            
            // Add sound effect simulation (visual feedback)
            setTimeout(() => {
              const ripple = document.createElement('div');
              ripple.style.position = 'absolute';
              ripple.style.top = '50%';
              ripple.style.left = '50%';
              ripple.style.transform = 'translate(-50%, -50%)';
              ripple.style.width = '20px';
              ripple.style.height = '20px';
              ripple.style.border = '2px solid #ffd700';
              ripple.style.borderRadius = '50%';
              ripple.style.animation = 'ripple-effect 0.6s ease-out forwards';
              ripple.style.pointerEvents = 'none';
              container.appendChild(ripple);
              
              setTimeout(() => ripple.remove(), 600);
            }, 200);
          }
        } else if (dot && dot.classList.contains('eaten')) {
          // Un-eat dots when scrolling back up
          dot.style.animation = 'none';
          dot.classList.remove('eaten');
        }
      });
      
      // Update right navigation active state
      if (rightNavContent && rightNavCollapsed) {
        // Update expanded items
        const rightNavItems = rightNavContent.querySelectorAll('.right-nav-item');
        rightNavItems.forEach((item, index) => {
          if (index === activeIndex) {
            item.style.background = 'rgba(0, 163, 255, 0.5)';
            item.style.borderColor = 'rgba(0, 163, 255, 0.8)';
            item.style.transform = 'translateX(-6px)';
            item.style.boxShadow = '0 4px 12px rgba(0, 163, 255, 0.3)';
          } else {
            item.style.background = 'rgba(255, 255, 255, 0.1)';
            item.style.borderColor = 'rgba(255, 255, 255, 0.2)';
            item.style.transform = 'translateX(0)';
            item.style.boxShadow = 'none';
          }
        });
        
        // Update collapsed dots
        const rightNavDots = rightNavCollapsed.querySelectorAll('.right-nav-dot');
        rightNavDots.forEach((dot, index) => {
          if (index === activeIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }
    
    // Scroll handler
    function handleScroll() {
      updateNavigation();
    }
    
    // Initialize everything
    createPacmanNavigation();
    createRightNavigation();
    updateNavigation();
    
    // Add scroll listener
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    console.log('Dry Lab Pac-Man Navigation Initialized Successfully!');
  });
  
  // Show navigation immediately since we don't have Hero component
  document.addEventListener('DOMContentLoaded', function() {
    const nav = document.getElementById('main-nav');
    if (nav) {
      // Remove hiding classes
      nav.classList.remove('-translate-y-full', 'opacity-0');
      nav.classList.add('translate-y-0', 'opacity-100');
      
      // Force visibility with inline styles as backup
      nav.style.transform = 'translateY(0)';
      nav.style.opacity = '1';
      nav.style.visibility = 'visible';
      nav.style.position = 'fixed';
      nav.style.top = '0';
      nav.style.left = '0';
      nav.style.right = '0';
      nav.style.zIndex = '50';
      nav.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
      nav.style.backdropFilter = 'blur(10px)';
      nav.style.borderBottom = '1px solid rgba(0, 0, 0, 0.1)';
      nav.style.padding = '1rem 0';
      
      console.log('Navigation forced to show');
      
      // Also ensure all navigation links are styled and clickable
      const navLinks = nav.querySelectorAll('a');
      navLinks.forEach(link => {
        link.style.color = '#2E2E38'; // ink-900 color
        link.style.textDecoration = 'none';
        link.style.padding = '0.5rem 1rem';
        link.style.borderRadius = '0.5rem';
        link.style.transition = 'all 0.3s ease';
        link.style.display = 'inline-block';
        
        // Add hover effects
        link.addEventListener('mouseenter', function() {
          this.style.backgroundColor = 'rgba(230, 57, 70, 0.1)';
          this.style.color = '#E63946'; // lychee-500
        });
        
        link.addEventListener('mouseleave', function() {
          this.style.backgroundColor = 'transparent';
          this.style.color = '#2E2E38';
        });
      });
    }
  });
</script>
