---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import '../../styles/global.css';
---

<Layout title="Dry Lab - Lychee Guardians">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-lychee-50 to-lychee-100 pt-20">
    <div class="container text-center">
      <h1 class="font-display text-h1 text-ink-900 mb-6">
        Dry Lab Modeling
      </h1>
      <p class="text-xl text-ink-700 max-w-3xl mx-auto mb-8">
        Computational models to predict optimal treatment conditions and design effective preservation strategies
      </p>
      <div class="w-32 h-32 bg-lychee-200 rounded-full flex items-center justify-center mx-auto">
        <span class="text-6xl">üíª</span>
      </div>
    </div>
  </section>
  
  <!-- Main Content Sections -->
  <section class="py-16 bg-white">
    <div class="container">
      <h2 class="font-display text-h2 text-ink-900 mb-12 text-center">
        Computational Approaches
      </h2>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Placeholder content sections -->
        <div class="card">
          <h3 class="font-display text-xl font-semibold mb-4 text-lychee-500">
            Molecular Dynamics Simulations
          </h3>
          <p class="text-ink-700 mb-4">
            Content about molecular dynamics simulations and protein-ligand interactions will go here.
          </p>
          <div class="bg-lychee-50 p-4 rounded-lg">
            <p class="text-sm text-lychee-600 italic">
              This section is ready for your computational modeling content...
            </p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="font-display text-xl font-semibold mb-4 text-lychee-500">
            Kinetic Modeling
          </h3>
          <p class="text-ink-700 mb-4">
            Information about reaction kinetics and pathway optimization will be added here.
          </p>
          <div class="bg-lychee-50 p-4 rounded-lg">
            <p class="text-sm text-lychee-600 italic">
              Ready for your kinetic models and pathway analysis...
            </p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="font-display text-xl font-semibold mb-4 text-lychee-500">
            Machine Learning Models
          </h3>
          <p class="text-ink-700 mb-4">
            Predictive models for compound effectiveness and treatment optimization will be documented here.
          </p>
          <div class="bg-lychee-50 p-4 rounded-lg">
            <p class="text-sm text-lychee-600 italic">
              Space for your ML models and predictions...
            </p>
          </div>
        </div>
        
        <div class="card">
          <h3 class="font-display text-xl font-semibold mb-4 text-lychee-500">
            Systems Biology Analysis
          </h3>
          <p class="text-ink-700 mb-4">
            Network analysis and systems-level modeling results will be presented here.
          </p>
          <div class="bg-lychee-50 p-4 rounded-lg">
            <p class="text-sm text-lychee-600 italic">
              Ready for your systems biology insights...
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Interactive Models Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <h2 class="font-display text-h2 text-ink-900 mb-12 text-center">
        Interactive Models
      </h2>
      
      <div class="card card--accent">
        <h3 class="font-display text-xl font-semibold mb-4 text-lychee-500">
          Model Visualization Dashboard
        </h3>
        <p class="text-ink-700 mb-6">
          This area is prepared for interactive visualizations, charts, and model outputs.
        </p>
        <div class="bg-white p-8 rounded-lg border-2 border-dashed border-gray-300 text-center">
          <div class="w-20 h-20 bg-lychee-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üìä</span>
          </div>
          <p class="text-gray-600">
            Interactive model visualizations will be embedded here
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Footer Navigation -->
  <section class="py-12 bg-lychee-50">
    <div class="container text-center">
      <h3 class="font-display text-xl font-semibold mb-6">Explore More</h3>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/wetlab/" class="btn btn-outline">
          ‚Üê Wet Lab Research
        </a>
        <a href="/project/" class="btn btn-outline">
          Project Overview ‚Üí
        </a>
        <a href="/results/" class="btn btn-outline">
          View Results ‚Üí
        </a>
      </div>
    </div>
  </section>
</Layout>