  function setupDnaNavigation() {
    const dnaNavContainer = document.getElementById('dna-nav-container');
    if (!dnaNavContainer) return;

    const sectionData = [
      { id: 'hero', label: 'Hero' },
      { id: 'overview', label: 'Overview' },
      { id: 'litchidb', label: 'LitchiDB' },
      { id: 'bactagenome', label: 'Bactagenome' },
      { id: 'drone', label: 'Drone System' },
      { id: 'synbiomcp', label: 'SynbioMCP' },
      { id: 'team', label: 'Team' }
    ];

    const sections = sectionData.map(data => document.getElementById(data.id)).filter(Boolean);
    let currentActiveIndex = -1;
    const svgNS = "http://www.w3.org/2000/svg";
    let strand1, strand2, rungsGroup;
    const probes = [];

    function setupNavigation() {
      const totalHeight = window.innerHeight * 0.8;
      const svg = document.createElementNS(svgNS, 'svg');
      svg.setAttribute('width', '80');
      svg.setAttribute('height', totalHeight);
      svg.setAttribute('viewBox', `0 0 80 ${totalHeight}`);
      svg.style.position = 'absolute';
      svg.style.top = `${-totalHeight / 2}px`;
      svg.style.left = '-10px';

      strand1 = document.createElementNS(svgNS, 'path');
      strand2 = document.createElementNS(svgNS, 'path');
      [strand1, strand2].forEach(s => {
        s.setAttribute('stroke', '#aab1bd');
        s.setAttribute('stroke-width', '2');
        s.setAttribute('fill', 'none');
      });
      
      rungsGroup = document.createElementNS(svgNS, 'g');
      svg.appendChild(rungsGroup);
      svg.appendChild(strand1);
      svg.appendChild(strand2);
      dnaNavContainer.appendChild(svg);

      // Create probes
      sectionData.forEach((data, i) => {
        if (!sections[i]) return;
        
        const sectionCenter = sections[i].offsetTop + sections[i].offsetHeight / 2;
        const relativePos = i / (sectionData.length - 1);
        const yPos = relativePos * totalHeight - totalHeight / 2;
        
        const navDot = document.createElement('div');
        navDot.className = 'nav-dot-dna';
        navDot.style.position = 'absolute';
        navDot.style.top = `${yPos}px`;
        navDot.style.left = '0px';

        const probeSvg = document.createElementNS(svgNS, 'svg');
        probeSvg.setAttribute('viewBox', '0 0 80 20');
        probeSvg.setAttribute('width', '80');
        probeSvg.setAttribute('height', '20');
        probeSvg.style.position = 'absolute';
        probeSvg.style.top = '-10px';
        
        const probeGroup = document.createElementNS(svgNS, 'g');
        probeGroup.classList.add('dna-probe');
        
        const probeStem = document.createElementNS(svgNS, 'path');
        probeStem.setAttribute('d', 'M 55 10 L 40 10');
        probeStem.setAttribute('stroke', '#aab1bd');
        probeStem.setAttribute('stroke-width', '2');
        
        const probeHead = document.createElementNS(svgNS, 'circle');
        probeHead.classList.add('probe-head');
        probeHead.setAttribute('cx', '60');
        probeHead.setAttribute('cy', '10');
        probeHead.setAttribute('r', '5');
        probeHead.setAttribute('fill', '#FFF');
        probeHead.setAttribute('stroke', '#aab1bd');
        probeHead.setAttribute('stroke-width', '2');
        
        probeGroup.appendChild(probeStem);
        probeGroup.appendChild(probeHead);
        probeSvg.appendChild(probeGroup);
        navDot.appendChild(probeSvg);
        
        const tooltip = document.createElement('div');
        tooltip.className = 'tooltip';
        tooltip.textContent = data.label;
        navDot.appendChild(tooltip);

        dnaNavContainer.appendChild(navDot);
        probes.push(probeGroup);

        navDot.addEventListener('click', () => {
          sections[i]?.scrollIntoView({ behavior: 'smooth' });
        });
      });
    }

    function updateDnaShape() {
      const totalHeight = window.innerHeight * 0.8;
      const pageHeight = document.body.scrollHeight;
      const scrollY = window.scrollY;
      const scrollPercent = scrollY / (pageHeight - window.innerHeight);

      const unzipY = scrollPercent * totalHeight;
      const viewportCenterY = totalHeight / 2;

      let d1 = '';
      let d2 = '';
      rungsGroup.innerHTML = '';

      const numPoints = 200;
      for (let i = 0; i <= numPoints; i++) {
        const y = (i / numPoints) * totalHeight;
        const command = i === 0 ? 'M' : 'L';
        
        const distanceFromCenter = Math.abs(y - viewportCenterY);
        const scaleFactor = 1 - (distanceFromCenter / viewportCenterY) * 0.4;
        const amplitude = 15 * scaleFactor;

        let x1, x2;
        if (y < unzipY) {
          x1 = 40 - amplitude;
          x2 = 40 + amplitude;
        } else {
          const phase = (y - unzipY) * 0.05;
          x1 = 40 + Math.sin(phase) * amplitude;
          x2 = 40 - Math.sin(phase) * amplitude;
        }
        d1 += `${command} ${x1},${y} `;
        d2 += `${command} ${x2},${y} `;
      }

      strand1.setAttribute('d', d1);
      strand2.setAttribute('d', d2);

      // Draw Rungs
      const numRungs = 40;
      for (let i = 0; i <= numRungs; i++) {
        const y = (i / numRungs) * totalHeight;
        
        const distanceFromCenter = Math.abs(y - viewportCenterY);
        const scaleFactor = 1 - (distanceFromCenter / viewportCenterY) * 0.4;
        const amplitude = 15 * scaleFactor;

        const rung = document.createElementNS(svgNS, 'path');
        let rung_d;
        if (y < unzipY) {
          const x1 = 40 - amplitude;
          const x2 = 40 + amplitude;
          rung_d = `M ${x1},${y} L ${x1+5},${y} M ${x2},${y} L ${x2-5},${y}`;
        } else {
          const phase = (y - unzipY) * 0.05;
          const x1 = 40 + Math.sin(phase) * amplitude;
          const x2 = 40 - Math.sin(phase) * amplitude;
          rung_d = `M ${x1},${y} L ${x2},${y}`;
        }
        rung.setAttribute('d', rung_d);
        rung.setAttribute('stroke', '#c8cdd7');
        rung.setAttribute('stroke-width', '1.5');
        rungsGroup.appendChild(rung);
      }

      // Update active section
      let newActiveIndex = -1;
      const viewOffset = window.innerHeight * 0.5;
      sections.forEach((section, index) => {
        if (section && section.offsetTop - viewOffset <= scrollY) {
          newActiveIndex = index;
        }
      });

      if (newActiveIndex !== currentActiveIndex) {
        probes.forEach((probe, i) => probe.classList.toggle('active', i === newActiveIndex));
        currentActiveIndex = newActiveIndex;
      }
    }

    let ticking = false;
    function handleScroll() {
      const mainNavContainer = document.getElementById('scroll-nav-container');
      const secondaryNavContainer = document.getElementById('secondary-nav-container');
      
      if (mainNavContainer) {
        mainNavContainer.classList.toggle('visible', window.pageYOffset > 50);
      }
      if (secondaryNavContainer) {
        secondaryNavContainer.classList.toggle('visible', window.pageYOffset > 50);
      }

      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateDnaShape();
          ticking = false;
        });
        ticking = true;
      }
    }
    
    setupNavigation();
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    // Initial calls
    handleScroll();
    updateDnaShape();
  }

  function setupSecondaryNavigation() {
    const secondaryNav = document.getElementById('secondary-nav');
    if (!secondaryNav) return;

    const subSections = [
      { id: 'overview', label: 'Overview', parent: 'overview' },
