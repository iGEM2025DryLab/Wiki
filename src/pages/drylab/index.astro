      });
      
      secondaryNav.appendChild(link);
    });
  }

  function setupCarousel() {
    const carousel = document.getElementById('litchi-carousel');
    if (!carousel) return;

    const track = carousel.querySelector('.carousel-track');
    const prevBtn = carousel.querySelector('.carousel-prev');
    const nextBtn = carousel.querySelector('.carousel-next');
    const slides = carousel.querySelectorAll('.carousel-slide');
    
    let currentSlide = 0;

    function updateCarousel() {
      const translateX = -currentSlide * 100;
      track.style.transform = `translateX(${translateX}%)`;
    }

    prevBtn?.addEventListener('click', () => {
      currentSlide = (currentSlide - 1 + slides.length) % slides.length;
      updateCarousel();
    });

    nextBtn?.addEventListener('click', () => {
      currentSlide = (currentSlide + 1) % slides.length;
      updateCarousel();
    });

    // Auto-play
    setInterval(() => {
      currentSlide = (currentSlide + 1) % slides.length;
      updateCarousel();
    }, 5000);
  }

  function setupRadialChart() {
    // Animate the radial chart connections
    const connections = document.querySelectorAll('#connection-lines line');
    const nodes = document.querySelectorAll('#node-circles circle');
    
    connections.forEach((line, i) => {
