---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import '../../styles/global.css';
---

<Layout title="Dry Lab - Lychee Guardians">
  <Navigation />
  
  <!-- Pac-Man Navigation (Primary) -->
  <div id="pacman-nav" class="fixed left-6 top-1/2 transform -translate-y-1/2 z-40 opacity-0 transition-opacity duration-500 w-20 lg:block hidden">
    <div id="pacman-container">
      <!-- Pac-man navigation will be generated by JavaScript -->
    </div>
  </div>

  <!-- Right Side Module Navigation -->
  <div id="right-nav-container" class="fixed right-2 top-1/2 transform -translate-y-1/2 z-30 opacity-0 transition-all duration-500 w-12 lg:block hidden hover:w-48 hover:right-8">
    <div class="bg-white/10 backdrop-blur-md rounded-xl shadow-xl border border-white/20 h-full transition-all duration-300">
      <!-- Collapsed State - Only Dots -->
      <div id="right-nav-collapsed" class="p-3 transition-opacity duration-300">
        <div class="flex flex-col items-center space-y-3">
          <!-- Collapsed dots will be generated by JavaScript -->
        </div>
      </div>
      
      <!-- Expanded State - Full Navigation -->
      <div id="right-nav-expanded" class="p-4 opacity-0 transition-opacity duration-300 absolute inset-0 rounded-xl bg-white/10 backdrop-blur-md">
        <h3 class="text-white font-bold text-sm mb-4 text-center">Dry Lab Modules</h3>
        <div id="right-nav-content">
          <!-- Module navigation will be generated by JavaScript -->
        </div>
      </div>
    </div>
  </div>
  
  <!-- Hero Section -->
  <section id="hero" class="min-h-screen flex items-center relative pt-20 overflow-hidden bg-grid">
    <div class="container mx-auto px-4 md:px-8 z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-[clamp(2.5rem,8vw,5rem)] font-display font-bold leading-tight mb-6" data-aos="fade-up">
          Innovating <span class="text-primary text-shadow">Synthetic Biology</span> Solutions
        </h1>
        <p class="text-[clamp(1rem,3vw,1.25rem)] text-white/80 mb-10 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
          Integrating bioinformatics, gene prediction, precision agriculture, and modular cloning for breakthrough applications
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-aos="fade-up" data-aos-delay="400">
          <a href="#overview" class="px-8 py-3 bg-primary text-dark font-semibold rounded-full hover:bg-primary/90 transform hover:-translate-y-1 transition-all shadow-lg shadow-primary/20">
            Explore Project
          </a>
          <a href="#team" class="px-8 py-3 glass text-white font-semibold rounded-full hover:bg-white/10 transform hover:-translate-y-1 transition-all">
            Meet Our Team
          </a>
        </div>
      </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute -bottom-10 -left-10 w-64 h-64 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/3 -right-20 w-80 h-80 bg-accent/10 rounded-full blur-3xl"></div>
  </section>

  <!-- Project Overview -->
  <section id="overview" class="py-24 relative">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <h2 class="text-[clamp(1.8rem,5vw,3rem)] font-display font-bold mb-4" data-aos="fade-up">Project Overview</h2>
        <div class="w-20 h-1 bg-primary mx-auto" data-aos="fade-up" data-aos-delay="100"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- LitchiDB Card -->
        <div class="glass rounded-2xl p-6 rotate-on-view" data-aos="fade-up" data-aos-delay="100">
          <div class="gold-stat-badge mb-3">
            <i class="fa fa-trophy"></i> 1st to do
          </div>
          <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center mb-5">
            <i class="fa fa-database text-primary text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">LitchiDB</h3>
          <p class="text-white/70">The first open-source litchi spoilage dataset with comprehensive imaging and biochemical data across 5 varieties.</p>
        </div>
        
        <!-- Bactagenome Card -->
        <div class="glass rounded-2xl p-6 rotate-on-view" data-aos="fade-up" data-aos-delay="200">
          <div class="gold-stat-badge mb-3">
            <i class="fa fa-trophy"></i> 1st to do
          </div>
          <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center mb-5">
            <svg class="w-8 h-8 text-primary" viewBox="0 0 100 100">
              <path d="M50,10 C30,10 30,30 10,30 C10,50 30,50 30,70 C50,70 50,50 70,50 C70,30 50,30 50,10 Z" fill="currentColor" opacity="0.8"/>
              <path d="M50,10 C70,10 70,30 90,30 C90,50 70,50 70,70 C50,70 50,50 30,50 C30,30 50,30 50,10 Z" fill="currentColor" opacity="0.5"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Bactagenome</h3>
          <p class="text-white/70">First multimodal gene prediction tool combining genomic sequence with biochemical protein data.</p>
        </div>
        
        <!-- Drone System Card -->
        <div class="glass rounded-2xl p-6 rotate-on-view" data-aos="fade-up" data-aos-delay="300">
          <div class="stat-badge mb-3">
            <i class="fa fa-chart-line"></i> 30% Savings
          </div>
          <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center mb-5">
            <i class="fa fa-plane text-primary text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">Drone System</h3>
          <p class="text-white/70">Smart agricultural drone system for precision spraying of biological treatments on lychee farms.</p>
        </div>
        
        <!-- SynbioMCP Card -->
        <div class="glass rounded-2xl p-6 rotate-on-view" data-aos="fade-up" data-aos-delay="400">
          <div class="stat-badge mb-3">
            <i class="fa fa-rocket"></i> 20% Faster
          </div>
          <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center mb-5">
            <i class="fa fa-cogs text-primary text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">SynbioMCP</h3>
          <p class="text-white/70">Modular cloning platform streamlining biological part assembly for synthetic biology applications.</p>
        </div>
      </div>

      <!-- Project Objectives -->
      <div class="mt-16 max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div data-aos="fade-right">
            <h3 class="text-2xl font-bold mb-6">Project Objectives</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <i class="fa fa-check-circle text-primary text-xl mt-1"></i>
                <span>Create comprehensive lychee spoilage database for agricultural research</span>
              </li>
              <li class="flex items-start gap-3">
                <i class="fa fa-check-circle text-primary text-xl mt-1"></i>
                <span>Develop AI-powered gene prediction tools for synthetic biology</span>
              </li>
              <li class="flex items-start gap-3">
                <i class="fa fa-check-circle text-primary text-xl mt-1"></i>
                <span>Design precision agriculture solutions for sustainable farming</span>
              </li>
              <li class="flex items-start gap-3">
                <i class="fa fa-check-circle text-primary text-xl mt-1"></i>
                <span>Build modular platforms for accelerated research workflows</span>
              </li>
            </ul>
          </div>
          <div class="relative" data-aos="fade-left">
            <div class="glass rounded-2xl p-2">
              <img src="/api/placeholder/500/350" alt="Laboratory Research" class="w-full rounded-xl">
              <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent rounded-xl flex items-end p-6">
                <p class="text-white font-semibold">Advanced synthetic biology laboratory</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- LitchiDB Section -->
  <section id="litchidb" class="py-24 relative bg-darker">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <div class="feature-highlight inline-block relative mb-4" data-aos="fade-up">
          <h2 class="text-[clamp(1.8rem,5vw,3rem)] font-display font-bold">LitchiDB</h2>
          <div class="no-1-badge">1</div>
        </div>
        <p class="text-xl text-white/80 mb-6" data-aos="fade-up" data-aos-delay="100">First Open-Source Litchi Spoilage Dataset</p>
        <div class="w-20 h-1 bg-secondary mx-auto" data-aos="fade-up" data-aos-delay="200"></div>
      </div>

      <!-- Featured Carousel -->
      <div class="mb-16" data-aos="fade-up" data-aos-delay="300">
        <div class="max-w-4xl mx-auto">
          <div id="litchi-carousel" class="relative">
            <div class="carousel-container overflow-hidden rounded-2xl">
              <div class="carousel-track flex transition-transform duration-500" style="transform: translateX(0%)">
                <div class="carousel-slide min-w-full relative">
                  <img src="/api/placeholder/800/400" alt="Fresh Lychee Samples" class="w-full h-80 object-cover">
                  <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent flex items-end p-6">
                    <div>
                      <h3 class="text-xl font-bold text-white">Fresh Lychee Samples</h3>
                      <p class="text-white/80">Day 0 - Optimal freshness baseline</p>
                    </div>
                  </div>
                </div>
                <div class="carousel-slide min-w-full relative">
                  <img src="/api/placeholder/800/400" alt="Stage 1 Deterioration" class="w-full h-80 object-cover">
                  <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent flex items-end p-6">
                    <div>
                      <h3 class="text-xl font-bold text-white">Stage 1 Deterioration</h3>
                      <p class="text-white/80">Day 2 - Early browning signs</p>
                    </div>
                  </div>
                </div>
                <div class="carousel-slide min-w-full relative">
                  <img src="/api/placeholder/800/400" alt="Advanced Spoilage" class="w-full h-80 object-cover">
                  <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent flex items-end p-6">
                    <div>
                      <h3 class="text-xl font-bold text-white">Advanced Spoilage</h3>
                      <p class="text-white/80">Day 5 - Significant deterioration</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <button class="carousel-btn carousel-prev absolute left-4 top-1/2 transform -translate-y-1/2 w-12 h-12 bg-primary/20 hover:bg-primary/40 rounded-full flex items-center justify-center text-white transition-all">
              <i class="fa fa-chevron-left"></i>
            </button>
            <button class="carousel-btn carousel-next absolute right-4 top-1/2 transform -translate-y-1/2 w-12 h-12 bg-primary/20 hover:bg-primary/40 rounded-full flex items-center justify-center text-white transition-all">
              <i class="fa fa-chevron-right"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Dataset Details -->
      <div class="grid lg:grid-cols-2 gap-12">
        <div data-aos="fade-right">
          <h3 class="text-2xl font-bold mb-6">Dataset Specifications</h3>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>5 Lychee varieties from Guangdong province</span>
            </div>
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>15-day monitoring period with daily sampling</span>
            </div>
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>High-resolution imaging (4K+ resolution)</span>
            </div>
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>Biochemical analysis (pH, sugar, antioxidants)</span>
            </div>
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>Microbial population tracking</span>
            </div>
            <div class="flex items-center gap-3">
              <i class="fa fa-check-circle text-secondary text-xl"></i>
              <span>Environmental parameter logging</span>
            </div>
          </div>
        </div>

        <!-- Sample Gallery -->
        <div data-aos="fade-left">
          <h3 class="text-2xl font-bold mb-6">Sample Gallery</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Variety 1" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Variety 1</span>
              </div>
            </div>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Variety 2" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Variety 2</span>
              </div>
            </div>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Variety 3" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Variety 3</span>
              </div>
            </div>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Variety 4" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Variety 4</span>
              </div>
            </div>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Variety 5" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Variety 5</span>
              </div>
            </div>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg">
              <img src="/api/placeholder/150/150" alt="Microscopy" class="w-full h-24 object-cover group-hover:scale-110 transition-transform duration-300">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transition-colors duration-300 flex items-center justify-center">
                <span class="opacity-0 group-hover:opacity-100 text-white font-semibold text-sm">Microscopy</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Data Visualizations -->
      <div class="mt-16 grid lg:grid-cols-2 gap-12">
        <div class="glass rounded-2xl p-6" data-aos="fade-up">
          <h3 class="text-xl font-bold mb-6">pH Changes Over Time</h3>
          <div class="h-64">
            <canvas id="ph-chart"></canvas>
          </div>
        </div>
        <div class="glass rounded-2xl p-6" data-aos="fade-up" data-aos-delay="200">
          <h3 class="text-xl font-bold mb-6">Sugar Content Analysis</h3>
          <div class="h-64">
            <canvas id="sugar-chart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bactagenome Section -->
  <section id="bactagenome" class="py-24 relative">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <div class="feature-highlight inline-block relative mb-4" data-aos="fade-up">
          <h2 class="text-[clamp(1.8rem,5vw,3rem)] font-display font-bold">Bactagenome</h2>
          <div class="no-1-badge">1</div>
        </div>
        <p class="text-xl text-white/80 mb-6" data-aos="fade-up" data-aos-delay="100">First Multimodal Gene Prediction Tool</p>
        <div class="w-20 h-1 bg-secondary mx-auto" data-aos="fade-up" data-aos-delay="200"></div>
      </div>

      <!-- Workflow Interface -->
      <div class="max-w-6xl mx-auto mb-16" data-aos="fade-up" data-aos-delay="300">
        <div class="glass rounded-2xl p-8">
          <div class="flex items-center justify-between mb-8">
            <h3 class="text-2xl font-bold">Prediction Workflow</h3>
            <div class="stat-badge">
              <i class="fa fa-brain"></i> 75% Complete
            </div>
          </div>
          
          <!-- Progress Steps -->
          <div class="flex justify-between items-center mb-12">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-bold">1</div>
              <div class="ml-3">
                <p class="font-semibold">Input Processing</p>
                <p class="text-sm text-white/70">Genomic sequence analysis</p>
              </div>
            </div>
            <div class="flex-1 h-1 bg-primary/30 mx-6">
              <div class="h-full bg-primary w-3/4"></div>
            </div>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white font-bold">2</div>
              <div class="ml-3">
                <p class="font-semibold">Feature Extraction</p>
                <p class="text-sm text-white/70">Multimodal data fusion</p>
              </div>
            </div>
            <div class="flex-1 h-1 bg-primary/30 mx-6">
              <div class="h-full bg-primary w-1/2"></div>
            </div>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center text-white font-bold">3</div>
              <div class="ml-3">
                <p class="font-semibold">Model Prediction</p>
                <p class="text-sm text-white/70">AI-powered analysis</p>
              </div>
            </div>
            <div class="flex-1 h-1 bg-white/20 mx-6"></div>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center text-white font-bold">4</div>
              <div class="ml-3">
                <p class="font-semibold">Result Validation</p>
                <p class="text-sm text-white/70">Accuracy verification</p>
              </div>
            </div>
          </div>

          <!-- Mock Interface -->
          <div class="bg-dark rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              </div>
              <span class="text-sm text-white/70">bactagenome-predictor v2.1</span>
            </div>
            <div class="font-mono text-sm space-y-2">
              <div class="text-green-400"># Analyzing genomic sequence...</div>
              <div class="text-white/70">Input: 2.3M base pairs | Species: B. subtilis</div>
              <div class="text-primary">[████████████████████████████████] 100% Complete</div>
              <div class="text-secondary">Predicted genes: 2,847 | Confidence: 94.2%</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Performance Metrics -->
      <div class="grid lg:grid-cols-2 gap-12">
        <div class="glass rounded-2xl p-6" data-aos="fade-right">
          <h3 class="text-2xl font-bold mb-6">Model Performance</h3>
          <div class="h-64">
            <canvas id="performance-chart"></canvas>
          </div>
        </div>

        <!-- Multimodal Features -->
        <div class="space-y-6" data-aos="fade-left">
          <h3 class="text-2xl font-bold">Multimodal Capabilities</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="glass rounded-xl p-4">
              <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center mb-3">
                <i class="fa fa-dna text-primary"></i>
              </div>
              <h4 class="font-semibold mb-2">Genomic Analysis</h4>
              <p class="text-sm text-white/70">Sequence pattern recognition</p>
            </div>
            <div class="glass rounded-xl p-4">
              <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center mb-3">
                <i class="fa fa-atom text-secondary"></i>
              </div>
              <h4 class="font-semibold mb-2">Protein Structure</h4>
              <p class="text-sm text-white/70">3D structural prediction</p>
            </div>
            <div class="glass rounded-xl p-4">
              <div class="w-10 h-10 bg-accent/20 rounded-lg flex items-center justify-center mb-3">
                <i class="fa fa-chart-line text-accent"></i>
              </div>
              <h4 class="font-semibold mb-2">Expression Data</h4>
              <p class="text-sm text-white/70">Transcriptome analysis</p>
            </div>
            <div class="glass rounded-xl p-4">
              <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center mb-3">
                <i class="fa fa-network-wired text-primary"></i>
              </div>
              <h4 class="font-semibold mb-2">Network Analysis</h4>
              <p class="text-sm text-white/70">Gene interaction mapping</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Drone System Section -->
  <section id="drone" class="py-24 relative bg-darker">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center mb-16">
        <h2 class="text-[clamp(1.8rem,5vw,3rem)] font-display font-bold mb-4" data-aos="fade-up">Drone Spraying System</h2>
        <p class="text-xl text-white/80 mb-6" data-aos="fade-up" data-aos-delay="100">30% Pesticide & Cost Savings</p>
        <div class="w-20 h-1 bg-secondary mx-auto" data-aos="fade-up" data-aos-delay="200"></div>
      </div>

      <!-- Drone Specifications -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <div class="glass rounded-2xl p-6 text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="text-3xl font-bold text-primary mb-2">25L</div>
          <p class="text-white/70">Tank Capacity</p>
        </div>
        <div class="glass rounded-2xl p-6 text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="text-3xl font-bold text-secondary mb-2">2.5km</div>
          <p class="text-white/70">Flight Range</p>
        </div>
        <div class="glass rounded-2xl p-6 text-center" data-aos="fade-up" data-aos-delay="300">
          <div class="text-3xl font-bold text-accent mb-2">45min</div>
          <p class="text-white/70">Flight Time</p>
        </div>
        <div class="glass rounded-2xl p-6 text-center" data-aos="fade-up" data-aos-delay="400">
          <div class="text-3xl font-bold text-primary mb-2">±5cm</div>
